                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>开通会员</td>
                                <td>恭喜您！您已成功开通全年会员，有效期至2018-01-31</td>
                                <td>2016-01-31</td>
                            </tr>
                            <tr>
                                <td>开通会员</td>
                                <td>恭喜您！您已成功开通全年会员，有效期至2017-01-31</td>
                                <td>2016-01-31</td>
                            </tr>

                        </tbody>
                    </table>
                </div>

            </div>
        </div>

        @*</form>
            </div>*@
    </div>
</div>




<script>
    var money = 0.00;
    function getPrice(obj) {

        var tmp = obj;
        $(tmp).css("background-color", "white");
        $(tmp).css("border-style", "solid");
        $(tmp).css("border-color", "green");
        $(tmp).css("border-width", "medium")
        $(tmp).siblings().css({ "border-style": "none", "background-color": "lightgrey" });
        money = $(tmp).find("em").text();
        //alert("text的值：" + $("#price").text() + "\n" +
        //    "html的值：" + $("#price").html());
        
        $("#price").text(money + "元");
    }
    function chosed(obj) {
        var tmp = obj;
        $(tmp).css("background-color", "white");
        $(tmp).css("border-style", "solid");
        $(tmp).css("border-color", "green");
        $(tmp).css("border-width", "medium")
        $(tmp).siblings().css({ "border-style": "none", "background-color": "lightgrey" });
    }
</script>




