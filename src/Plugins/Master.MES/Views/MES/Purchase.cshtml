<style>
    button 
    {
        border-style: solid;
        border-width: medium;
        border-color: green;
        border-style: none;
        background-color: lightgrey;
    }
</style>
<div class="layui-fluid" id="LAY-app-message">
    <div class="layui-card">
        @*<div id="app" v-cloak>
            <form class="layui-form">*@
        <div class="layui-tab layui-tab-brief" lay-filter="settingTab">
            <ul class="layui-tab-title">
                <li class="layui-this">开通会员</li>
                <li>套餐升级</li>
                <li>消费记录</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <div class="layui-row">
                    </div>
                    <label style="font-size:16px;margin-left:10px"><b>当前会员</b></label>
                    <span style="font-size:26px;margin-top:10px;margin-left:10px"><b>全年会员</b></span><span style="color:gray">（2016-01-12 至 2021-01-31）</span>
                    <div style="margin-top:30px">
                        <b style="font-size:16px;margin-left:10px;margin-right:20px;position:absolute">会员套餐</b>
                        <button class="layui-btn layui-btn-primary" style="height:140px;width:200px;margin-left:100px;background-color: lightgrey" onclick="getPrice(this)">
                            <h2>季度会员</h2>
                            <p style="font-size:30px;margin-top:10px"><span><em>12000.00</em>元</span></p>
                        </button>
                        <button class="layui-btn layui-btn-primary" id="button2" style="height:140px;width:200px;margin-left:10px;background-color: lightgrey" onclick="getPrice(this)">
                            <h2>半年会员</h2>
                            <p style="font-size:30px;margin-top:10px"><span><em>22000.00</em>元</span></p>
                        </button>
                        <button class="layui-btn layui-btn-primary" style="height:140px;width:200px;margin-left:10px;background-color: lightgrey" onclick="getPrice(this)">
                            <h2>全年会员</h2>
                            <p style="font-size:30px;margin-top:10px"><span><em>36000.00</em>元</span></p>
                        </button>
                    </div>
                    <div style="margin-top:30px">
                        <b style="font-size:16px;margin-left:10px;margin-right:20px">会员时间</b>    <span>可延续至2022-01-31</span>
                    </div>
                    <div style="margin-top:30px">
                        <b style="font-size:16px;margin-left:10px;margin-right:20px">支付方式</b>
                        <button class="layui-btn layui-btn-primary" style="height:40px;width:120px;margin-left:0px;background-color: lightgrey" onclick="chosed(this)">
                            <h3>支付宝支付</h3>
                        </button>
                        <button class="layui-btn layui-btn-primary" style="height:40px;width:120px;margin-left:10px;background-color: lightgrey" onclick="chosed(this)">
                            <h3>公司转账</h3>
                        </button>
                    </div>
                    <div style="margin-top:30px">
                        <b style="font-size:16px;margin-left:10px;margin-right:20px">应付金额</b>   <b id="price" style="color:red;font-size:26px">4500元</b>
                    </div>
                </div>
                <div class="layui-tab-item">todo</div>
                <div class="layui-tab-item">
                    <table class="layui-table">
                        <colgroup>
                            <col width="150">
                            <col>
                            <col width="200">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>类型</th>
                                <th>操作详情</th>
