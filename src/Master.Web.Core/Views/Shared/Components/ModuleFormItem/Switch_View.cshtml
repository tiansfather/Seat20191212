@using Master.Web.Components
@using Master.Module
@inherits MasterRazorPage<TModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Master.Web.Core
@model ModuleFormItemViewModel
@{
	var column = Model.ColumnInfo;
	var ischeck = Model.Value != null ? Convert.ToBoolean(Model.Value) : false;

	var renderer = !string.IsNullOrEmpty(column.Renderer) ? column.Renderer : "lay-switch-view";
}
<div is="@renderer" :value="@(ischeck?"true":"false")" :column-Info="{ColumnKey:'@column.ColumnKey',ColumnName:'@column.ColumnName',VerifyRules:'@column.VerifyRules'}"></div>

